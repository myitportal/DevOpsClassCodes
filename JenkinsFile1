pipeline{
agent any
    tools{
        java 'Java'
        maven 'Maven'
    }
    stages{
        stage('Checkout git'){
            agent any
            steps{
                git 'https://github.com/myitportal/DevOpsClassCodes.git'
            }
        }
        stage('Compile'){
            agent any
            steps{
                sh 'mvn compile'
            }
        }
        stage('CodeReview'){
            agent any
            steps{
                sh 'mvn pmd:pmd'
            }
        }
        stage('UnitTest'){
            agent {label 'win_slave'}
            steps{
                git 'https://github.com/myitportal/DevOpsClassCodes.git'
                bat 'mvn test'
            }
        }
        stage('MetricCheck'){
            agent any
            steps{
                sh 'mvn cobertura:cobertura -Dcobertura.report.format=xml'
            }
        }
        stage('Package'){
            agent any
            steps{
                bat 'mvn package'
            }
        }
    }
}
